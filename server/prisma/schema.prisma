generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Project{
  id Int @id @default(autoincrement())
  name  String
  task  Task[]
}

model Task{
  id Int @id @default(autoincrement())
  taskname  String
  startdate DateTime
  enddate DateTime
  status  Status
  projectId Int
  project   Project @relation(fields: [projectId], references: [id])
}

enum Status {
  TODO
  INPROGRESS
  INREVIEW
  COMPLETED
}